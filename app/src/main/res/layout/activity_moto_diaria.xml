<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MotoDiaria">

    <ImageView
        android:id="@+id/categorias_logo"
        android:layout_width="408dp"
        android:layout_height="180dp"
        android:layout_marginBottom="535dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/containerpag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <View
        android:id="@+id/containerpag"
        style="@style/ContainerComponents"
        android:layout_width="367dp"
        android:layout_height="370dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_pag"
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="348dp"
        android:layout_height="518dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@id/containerpag"
        app:layout_constraintEnd_toEndOf="@id/containerpag"
        app:layout_constraintStart_toStartOf="@id/containerpag"
        app:layout_constraintTop_toTopOf="@id/containerpag"
        app:srcCompat="@drawable/qr10" />

    <TextView
        android:id="@+id/text_pag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escaneie o QR Code para efetuar o pagamento"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>